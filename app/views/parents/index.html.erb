<!DOCTYPE html>
<html lang="en">
<p id="notice"><%= notice %></p>

<head>
<link rel="stylesheet" type="text/css" href="index.css">
</head>

<body>
 <div class="container">
  <div class="row">
    <div class="col-lg-0" style="">
     
    </div>
    <div class="col-lg-12" style="">
<div class="container-fluid">          
  <table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Child</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.name %></td>
        <td><%= parent.address %></td>
        <td><%= parent.email %></td>
        <td><%= parent.phone_number %></td>
        <td><%= parent.child %></td>
        <!-- Single button -->
        <td>
        <div class="btn-group">
 
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><span class="caret"></span> </button>
          <ul class="dropdown-menu">
            <li><p><%= link_to 'Show', parent %></p></li>
            <li><p><%= link_to 'Edit', edit_parent_path(parent) %></p></li>
            <li><p><%= link_to 'Destroy', parent, method: :delete, data: { confirm: 'Are you sure?' } %></p></li>
          </ul>
        </div></td>

      </tr>
      </div>
    <% end %>
  </tbody>
</table>

    </div>
  </div>
</div>

</body>
</html>

