<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Subject title</th>
      <th>First grading</th>
      <th>Second grading</th>
      <th>Integer</th>
      <th>Third grading</th>
      <th>Fourth grading</th>
      <th>Final grade</th>
      <th>Student</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.subject_title %></td>
        <td><%= subject.first_grading %></td>
        <td><%= subject.second_grading %></td>
        <td><%= subject.integer %></td>
        <td><%= subject.third_grading %></td>
        <td><%= subject.fourth_grading %></td>
        <td><%= subject.final_grade %></td>
        <td><%= subject.student_id %></td>
        <td><%= subject.remarks %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

